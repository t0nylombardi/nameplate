module NamePlate
  class Avatar
    # Represents a derived avatar identity: letters and color.
    class Identity
      @color: untyped

      @letters: untyped

      attr_reader color: untyped

      attr_reader letters: untyped

      def initialize: (untyped color, untyped letters) -> void

      # Build an identity from a username.
      #
      # @param [String] username The input name.
      # @return [Identity] The derived avatar identity.
      def self.from_username: (untyped username) -> untyped

      private

      def self.initials: (untyped username, untyped count) -> untyped

      def self.count: (untyped username) -> (2 | 1)
    end
  end
end
